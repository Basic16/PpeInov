{% extends 'base.html.twig' %}

{% block title %}
	Log in!
{% endblock %}

{% block content %}
	<div class="container-fluid">
		<div class="row justify-content-center">
			<h1 class="text-center text-primary p-4">
				Se connecter
			</h1>
		</div>
		<div class="form-group mx-auto text-center w-25 p-3">
			<form method="post">
				{% if error %}
					<div class="alert alert-danger">
						{{ error.messageKey|trans(error.messageData, 'security') }}
					</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						Vous êtes connectez en tant que :
						{{ app.user.username }}
						,
						<a href="{{ path('app_logout') }}">
							Se deconnecter
						</a>
					</div>
				{% endif %}


				<label for="inputEmail">
					Email
				</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
				<label for="inputPassword">
					Mot de passe
				</label>
				<input type="password" name="password" id="inputPassword" class="form-control" required>

				<input
				type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				{#
								        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
								        See https://symfony.com/doc/current/security/remember_me.html
								
								        <div class="checkbox mb-3">
								            <label>
								                <input type="checkbox" name="_remember_me"> Remember me
								            </label>
								        </div>
								    #}

				<button class="btn btn-lg btn-primary" type="submit">
					Se connecter
				</button>

			</form>
            <p style="margin-top:10px"> Vous n'êtes pas encore inscrit ? </p>
			<div class="row justify-content-center" style="margin-top:10px">
                
				<button class="btn btn-primary btn-lg nav-link" >
					<a class="nav-link" href="{{path('inscrire')}}">
						S'inscrire
					</a>
				</button>
			</div>
		</div>


	</div>


</div>{% endblock %}
